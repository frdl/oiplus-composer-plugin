{
    "name": "frdl/webfan",
    "type": "library",
    "description": "create websites, developing projects, compose applications",
    "keywords": ["php", "packages", "pluginsystem", "development", "websites", "webfan", "frdl", "api", "pragmamx"],
    "homepage": "http://frdl.github.io/webfan/",
    "license":  [ "BSD-4-Clause", "BSD-3-Clause" ],
    "support": {
        "email": "support@webfan.de",
        "issues": "https://github.com/frdl/webfan/issues",
        "forum": "http://tillwehowski.webfan.de/forum/",
        "wiki": "https://github.com/frdl/webfan/wiki",
        "source": "https://github.com/frdl/webfan/wiki/Installation"
    },
    "authors": [
        {
            "name": "Till Wehowski",
            "email": "software@frdl.de",
            "homepage": "http://www.webfan.de",
            "role": "Developer"
        },
        {
            "name": "Mahel Plasson",
            "email": "contact@tradezone.fr",
            "homepage": "http://tradezone.fr",
            "role": "Translator"
        }
    ],

  "repositories":
  [
  	
      {
        "type": "vcs",
        "url": "https://github.com/crodas/php-git"
      },	
  	
      {
        "type": "vcs",
        "url": "https://github.com/jquery/jquery-ui"
      },

      {
        "type": "vcs",
        "url": "https://github.com/pachanka/ptty"
      },
    
    {
      "type": "composer",
      "url": "http:\/\/www.phpclasses.org\/"
    },

       {
	  "type": "composer",
	  "url": "http://www.jsclasses.org/"
	},

    {
      "packagist": true
    }


  ],

    "require": {
        "php": ">=5.3.3",
        "gettext/languages": "dev-master",
        "gettext/gettext": "dev-master",
        "phpseclib/phpseclib": ">=0.3.10",
        "pachanka/ptty":">=0.0.3",
        "jquery/jquery-ui":"*",
        "crodas/php-git":"*"
    },

    "require-dev": {
        "phine/phar" : "*"
    },


    "suggest": {
        "composer/composer": "Composer functionallities",
        "ext-zip" : "ZipArchive",
        "phpclasses/text-diff-rollback": "optimized diff patching",
        "phpclasses/bserialization":"Original source of a fork",
        "phpclasses/httpclient": "Original source of a fork"
    },


    "autoload": {
        "psr-4": {
            "frdl\\": ".ApplicationComposer/lib/frdl/",
            "webfan\\": ".ApplicationComposer/lib/webfan/",
            "webdof\\": ".ApplicationComposer/lib/webdof/",
            "": ".ApplicationComposer/lib/"
        }
    },

    "autoload-dev": {
        "psr-4": { "": "tests/" }
    },

    "prefer-stable": true,

    "config": {
        "bin-dir": "packages/bin",
        "preferred-install": "auto",
        "store-auths": "prompt",
        "github-protocols" : [ "git", "https","ssh"],
        "github-oauth": {"github.com": "oauthtoken"},
        "github-domains": ["github.com"],
        "vendor-dir" : ".ApplicationComposer/vendor",
        "cache-dir" : "cache",
        "cache-files-ttl": "15552000",
        "prepend-autoloader": true,
        "notify-on-install": true
    },

    "extra": { "test": "test" }

}

