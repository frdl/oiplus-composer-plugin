                "name": "TerraProject/pragmamx",
                "version": "2.2.2",
                "source": {
                    "url": "http://download.pragmamx.org/pmx/pragmaMx_2.2_2015-04-01--18-33_full.zip",
                    "type": "dist"
                }
            }
        },
        
    { 
       "type": "composer",
       "url": "http:\/\/interface.api.webfan.de\/v1\/public\/software\/mirror\/"
    },
 
  	
      {
        "type": "vcs",
        "url": "https:\/\/github.com\/jquery\/jquery-ui"
      },

      {
        "type": "vcs",
        "url": "https:\/\/github.com\/pachanka\/ptty"
      },

      {
        "type": "vcs",
        "url": "https:\/\/github.com\/nathansmith\/jQuery-Desktop"
      },
      
     {
        "type": "vcs",
        "url": "https:\/\/github.com\/frdl\/JsonRPC"
      },      
      
      
        
     {
       "type": "composer",
       "url": "http:\/\/www.phpclasses.org\/"
     },

    { 
       "type": "composer",
       "url": "http:\/\/www.jsclasses.org\/"
    },

    {
      "packagist": true
    }


 ],

    "require": {
        "php": ">=5.3.3"
    },

    "require-dev": {
        "phine/phar" : "*",
        "crodas/php-git":"*",
        "phpseclib/phpseclib": ">=0.3.10",
        "jquery/jquery-ui":"*",
        "pachanka/ptty":">=0.0.3",
        "nathansmith/jQuery-Desktop":"*",
        "crada/php-apidoc": "*"
    },


    "suggest": {

        "phpclasses/httpclient": "Original source of a fork",
        "phpclasses/oauth-api" : "Oauth Client SDK",
 
        "phpclasses/text-diff-rollback": "optimized diff patching",
        "phpclasses/bserialization":"Original source of a fork",       
        
        "gettext/languages": "dev-master",
        "gettext/gettext": "dev-master",
       
        "composer/composer": "Composer functionallities",
        "ext-zip" : "ZipArchive",
        "phine/phar" : "Using Phar without the extension installed",
        "crodas/php-git":"Acces git repositories and files",
        "phpseclib/phpseclib": "RSA, X.509, SSL without OpenSSL installed or better",
        "jquery/jquery-ui":"jQuery UI Widgets",
        "pachanka/ptty":"jQuery Terminal emulator",
        "nathansmith/jQuery-Desktop":"jQuery Desktop look and feel"
    },

    "conflict": {
        "microsoft/frontpage" : "*"
    },    
    
    "provide" : {
    	"frdl/-Flow" : "dev-master", 
        "phpclasses/source-loader": "0.9.17",
        "phpclasses/validate-formats": "5.0.4",
        "phpclasses/asql-cli": "1.0.0",
        "phpclasses/frdl-app": "1.0.0"
    },

    "autoload": {
    	"files": [
    	          ".ApplicationComposer/lib/frdl/webfan/Autoloading/SourceLoader.php",
    	          ".ApplicationComposer/lib/frdl/webfan/App.php"
    	         ],
        "psr-4": {
            "frdl\\": ".ApplicationComposer/lib/frdl/",
            "webfan\\": ".ApplicationComposer/lib/webfan/",
            "webdof\\": ".ApplicationComposer/lib/webdof/",
            "": ".ApplicationComposer/lib/"
        }
    },

    "autoload-dev": {
        "psr-4": { "": ".ApplicationComposer/lib/Tests" }
    },

    "prefer-stable": false,

    "config": {
        "bin-dir": "packages/bin",
        "preferred-install": "auto",
        "store-auths": "prompt",
        "github-protocols" : [ "git", "https","ssh"],
        "github-oauth": {"github.com": "oauthtoken"},
        "github-domains": ["github.com"],
        "vendor-dir" : ".ApplicationComposer/vendor",
        "cache-dir" : ".ApplicationComposer/cache",
        "cache-files-dir":".ApplicationComposer/packages",
        "cache-files-ttl": "15552000",
        "prepend-autoloader": false,
        "classmap-authoritative": true,
        "notify-on-install": true
    },

   
  "scripts": {

        "pre-install-cmd": [
            "webfan\\InstallShield\\bridge\\ComposerBridge"
        ],

        "post-create-project-cmd": [
            "webfan\\InstallShield\\bridge\\ComposerBridge"
        ],
        "post-root-package-install": [
            "webfan\\InstallShield\\bridge\\ComposerBridge"
        ],
        "pre-file-download": [
            "webfan\\InstallShield\\bridge\\ComposerBridge"
        ],
        "pre-package-uninstall": [
            "webfan\\InstallShield\\bridge\\ComposerBridge"
        ]

    },
    
    
    "extra": { 
        "frdl" : true,
        "frdl-apc-type" : "core", 
        "fexe": {
	               "PACKAGE" : "{___$PACKAGE___}",
	               "VERSION" : "{___$VERSION___}",
	               "OID" : "{___$OID___}",
	               "HOST" : "{___$HOST___}",
	               "HOST_HASH" : "{___$HOST_HASH___}",
	               "URL" : "{$__LOCATION___}",
	               "DOWNLOADTIME" : "{___$DOWNLOADTIME___}",
	               "INSTALLTIME" : "{___$INSTALLTIME___}",
	               "UID" : "{___$UID___}",
	               "UNAME" : "{___$UNAME___}",
	               "REGISTERED" : "{___$REGISTERED___}",
	               "LICENSEKEY" : "{___$LICENSEKEY___}",
	               "LICENSESERIAL" : "{___$LICENSESERIAL___}",
	               "DIR" : "{___$APPDIR___}"
	              
         },
         
         "suggest-install" : {
             "phpclasses/httpclient": "Original source of a fork",
             "phpclasses/oauth-api" : "Oauth Client SDK",
 
             "phpclasses/text-diff-rollback": "optimized diff patching",
             "phpclasses/bserialization":"Original source of a fork",       
        
            "gettext/languages": "dev-master",
            "gettext/gettext": "dev-master"         	
         }
    }

}

